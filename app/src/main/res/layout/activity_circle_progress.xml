<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.dhq.mywidget.progressbar.CircleProgressView
        android:id="@+id/main_circleprogressView"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.dhq.mywidget.CirclePrograssBarBar
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.dhq.mywidget.progressbar.NumberProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:progress_current="20" />

    <com.dhq.mywidget.progressbar.NumberProgressBar
        style="@style/NumberProgressBar_Beauty_Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:progress_current="30" />

    <com.dhq.mywidget.progressbar.NumberProgressBar
        style="@style/NumberProgressBar_Passing_Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:progress_current="40" />

</LinearLayout>